
public class Even_Fibonacci_Numbers {
	
	public static void main(String args[]) {
		
		int i = 0;
		int i_old = 0;
		int i_old2 = 0;
		int sum = 0;
		
		for (i = 0;i == 3999999;i += i_old + i_old2){
			System.out.println(i);
			if (i % 2 == 0) {
				
				sum += i;
			}
			
			i_old2 = i_old;
			i_old = i;
		}
		
		System.out.println(sum);
	}
}
